<section class="discover row hide">

  <form class="form col s12 search-form">

    <div class="row">
      <div class="input-field col s12">
        <input placeholder="your friend's email" id="email" required aria-required="true" type="email" class="email-input validate">
        <label for="email" style="width: 100%;" data-error="the email format should be like user@domain.pt">search by email</label>
      </div>
    </div>
    <div class="row">

      <div class="input-field col s12">
        <input placeholder="your friend's domain" id="domain" type="text" class="domain-input validate">
        <label for="domain" style="width: 100%;" data-error="the domain format should exist">search by domain</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s8">
        <button class="search-btn waves-effect waves-light btn" type="submit"><i class="material-icons left">search</i>Search</button>
      </div>
    </div>
  </form>

</section>

