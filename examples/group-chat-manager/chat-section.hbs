<div class="section">

    <div class="row valign-wrapper chat-header blue lighten-5">

    </div>

    <div class="row">

      <div class="col s4">
          <button class="waves-effect waves-light btn invite-btn"><i class="material-icons right">add</i>Invite</button>
      </div>

    </div>

    <div class="row">

        <div class="conversations col s12">

            <div class="row">
                <ul class="participant-list">
                </ul>
            </div>

            <div class="row messages">
                <ul class="collection">
                </ul>
            </div>

            <div class="row">

                <form class="col s12 message-form">
                    <div class="row">
                        <div class="input-field col s8">
                            <i class="material-icons prefix">mode_edit</i>
                            <textarea name="message" id="icon_prefix2" class="materialize-textarea input-message"></textarea>
                            <label for="icon_prefix2">Message</label>
                        </div>

                        <div class="col s4">
                            <button class="waves-effect waves-light btn send-message-btn" type="submit"><i class="material-icons right">send</i>send</button>
                        </div>
                    </div>
                </form>

                <form action="#" class="col s12 file-form">
                  <div class="file-field input-field">
                    <div class="btn">
                      <span>File</span>
                      <input type="file" multiple>
                    </div>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text" placeholder="Upload one or more files">
                    </div>
                  </div>
                </form>
            </div>

        </div>
    </div>
</div>
